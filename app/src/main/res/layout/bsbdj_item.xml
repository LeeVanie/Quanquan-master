<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/orange02"
              android:layout_marginTop="15dp"
    android:id="@+id/main">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="7dp"
        android:text="title"
        android:textColor="@color/black_text01"
        android:textSize="17sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageview"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <LinearLayout
        android:id="@+id/linear_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/loading_placeholder"
        android:visibility="gone">
        <com.xiao.nicevideoplayer.NiceVideoPlayer
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/edit_stork_gray"
            android:text="搞笑段子"
            android:textColor="@color/black_text02"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2018-01-17T05:26:47"
            android:textColor="@color/black_text02"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_stork_gray">

        <TextView
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点赞"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black_text02"
            android:textSize="15sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:tag="1"
            android:gravity="center"
            android:text="评论"
            android:textColor="@color/black_text02"
            android:textSize="15sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray01"/>
        <TextView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:tag="2"
            android:gravity="center"
            android:text="转发"
            android:textColor="@color/black_text02"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>